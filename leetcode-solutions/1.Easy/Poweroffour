/*Time Complexity: O(1)  
Space Complexity: O(1)*/        

class Solution {
public:
    bool isPowerOfFour(int n) {
        // Check if n is positive, a power of 2, and the single bit is in the correct position for a power of 4
        return n > 0 && (n & (n - 1)) == 0 && (n & 0x55555555);
    }
};